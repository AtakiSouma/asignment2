<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="http://localhost:8080/css/orchid.css" />
    <title>Document</title>
  </head>
  <body>
    <%- include('header.ejs'); -%>

    <div class="container">
      <div class="orchid-items">
        <% orchid.forEach((data,index) => { %>
        <div class="custom-grid">
          <div class="items-all skeleton">
            <div class="orchid-item">
              <a href="orchid/<%=data.slug%>">
                <image src="<%=data.image %>" />
              </a>

              <div class="star-icon skeleton">
                <i class="fa-sharp fa-solid fa-star"></i>
              </div>
            </div>
            <div class="orchid-name"><%= data.name%></div>
            <div class="orchid-category"><%= data.category.name%></div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const skeletonImage = document.getElementById("skeletonImage");

        // Add the 'skeleton' class after the page has fully loaded
        skeletonImage.classList.add("skeleton");
      });
    </script>
  </body>
</html>
